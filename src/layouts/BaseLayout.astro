---
import { type Lang, useTranslations } from '../i18n/ui';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description?: string;
  lang: Lang;
  heroImage?: string;
}

const { title, description, lang, heroImage } = Astro.props;
const t = useTranslations(lang);
const siteTitle = t('site.title');
const fullTitle = title === siteTitle ? title : `${title} | ${siteTitle}`;

// サイトのベースURLを取得
const siteUrl = Astro.site?.toString().replace(/\/$/, '') || 'https://marvelrivals-info.pages.dev';
const currentUrl = new URL(Astro.url.pathname, siteUrl).toString();

// OGP画像を絶対URLに変換
const ogImage = heroImage 
  ? new URL(heroImage, siteUrl).toString() 
  : new URL('/images/hero-bg.jpg', siteUrl).toString();
---

<!doctype html>
<html lang={lang} class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description || t('site.description')} />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Open Graph -->
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description || t('site.description')} />
    <meta property="og:type" content="article" />
    <meta property="og:url" content={currentUrl} />
    <meta property="og:locale" content={lang === 'ja' ? 'ja_JP' : 'en_US'} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:site_name" content={siteTitle} />
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description || t('site.description')} />
    <meta name="twitter:image" content={ogImage} />
    
    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/favicon.png" />
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&family=Noto+Sans+JP:wght@400;500;700&display=swap" rel="stylesheet" />
    
    <title>{fullTitle}</title>
  </head>
  <body class="min-h-screen bg-[#0d0d0d] text-white font-sans antialiased">
    <Header lang={lang} />
    
    <main class="flex-1">
      <slot />
    </main>
    
    <Footer lang={lang} />
  </body>
</html>

<style is:global>
  body {
    font-family: 'Inter', 'Noto Sans JP', sans-serif;
    line-height: 1.6;
  }
  
  ::-webkit-scrollbar {
    width: 8px;
  }
  
  ::-webkit-scrollbar-track {
    background: #1a1a1a;
  }
  
  ::-webkit-scrollbar-thumb {
    background: #444;
    border-radius: 4px;
  }
  
  ::-webkit-scrollbar-thumb:hover {
    background: #555;
  }
  
  ::selection {
    background: rgba(234, 179, 8, 0.3);
    color: inherit;
  }
  
  /* Prose styling for articles */
  .prose {
    --tw-prose-body: #d1d5db;
    --tw-prose-headings: #fff;
    --tw-prose-lead: #9ca3af;
    --tw-prose-links: #fbbf24;
    --tw-prose-bold: #fff;
    --tw-prose-counters: #9ca3af;
    --tw-prose-bullets: #6b7280;
    --tw-prose-hr: #374151;
    --tw-prose-quotes: #e5e7eb;
    --tw-prose-quote-borders: #fbbf24;
    --tw-prose-captions: #9ca3af;
    --tw-prose-code: #fff;
    --tw-prose-pre-code: #e5e7eb;
    --tw-prose-pre-bg: #1f2937;
    --tw-prose-th-borders: #4b5563;
    --tw-prose-td-borders: #374151;
  }
  
  .prose a {
    text-decoration: underline;
    text-underline-offset: 2px;
  }
  
  .prose a:hover {
    color: #fcd34d;
  }
  
  .prose blockquote {
    font-style: normal;
    background: #1f2937;
    border-radius: 0 0.5rem 0.5rem 0;
    padding: 1rem 1.5rem;
    border-left-width: 4px;
    border-left-color: #fbbf24;
  }
  
  .prose pre {
    background: #1f2937;
    border: 1px solid #374151;
  }
  
  .prose table {
    background: #1a1a1a;
    border-radius: 0.5rem;
    overflow: hidden;
  }
  
  .prose th {
    background: #1f2937;
  }
</style>
