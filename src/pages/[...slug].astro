---
// Êó•Êú¨Ë™ûË®ò‰∫ãË©≥Á¥∞„Éö„Éº„Ç∏
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import { useTranslations } from '../i18n/ui';

// ÈùôÁöÑ„Éë„ÇπÁîüÊàê
export async function getStaticPaths() {
  const posts = await getCollection('posts', ({ id }) => id.startsWith('ja/'));
  
  return posts.map((post) => {
    const slug = post.slug.replace(/^ja\//, '');
    return {
      params: { slug },
      props: { post },
    };
  });
}

const { post } = Astro.props;
const { Content } = await post.render();
const t = useTranslations('ja');

// ÂØæÂøú„Åô„ÇãËã±Ë™ûË®ò‰∫ã„Åå„ÅÇ„Çã„ÅãÁ¢∫Ë™ç
const allPosts = await getCollection('posts');
const enSlug = post.slug.replace(/^ja\//, '');
const hasEnglishVersion = allPosts.some((p) => p.slug === `en/${enSlug}`);

// Êó•‰ªò„Éï„Ç©„Éº„Éû„ÉÉ„Éà
const dateFormatter = new Intl.DateTimeFormat('ja-JP', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<BaseLayout 
  title={post.data.title} 
  description={post.data.description} 
  lang="ja"
  heroImage={post.data.heroImage}
>
  <article class="py-12">
    <div class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8">
      <!-- Article Header -->
      <header class="mb-12">
        {post.data.heroImage && (
          <div class="aspect-video overflow-hidden rounded-2xl mb-8">
            <img
              src={post.data.heroImage}
              alt=""
              class="h-full w-full object-cover"
            />
          </div>
        )}
        
        <!-- Category Badge -->
        <div class="mb-4">
          <a 
            href={`/category/${post.data.category}`}
            class="inline-flex items-center rounded-full bg-marvel-purple/20 px-4 py-1.5 text-sm font-medium text-marvel-gold hover:bg-marvel-purple/30 transition-colors"
          >
            {t(`category.${post.data.category}` as any)}
          </a>
        </div>
        
        <!-- Title -->
        <h1 class="text-4xl sm:text-5xl font-display font-bold text-white mb-6 leading-tight">
          {post.data.title}
        </h1>
        
        <!-- Meta -->
        <div class="flex flex-wrap items-center gap-4 text-gray-400">
          <div class="flex items-center gap-2">
            <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            <time datetime={post.data.pubDate.toISOString()}>
              {dateFormatter.format(post.data.pubDate)}
            </time>
          </div>
          
          {post.data.updatedDate && (
            <div class="flex items-center gap-2 text-marvel-gold">
              <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
              </svg>
              <span>{t('post.updatedAt')}: {dateFormatter.format(post.data.updatedDate)}</span>
            </div>
          )}
        </div>
        
        <!-- Related Heroes -->
        {post.data.heroes && post.data.heroes.length > 0 && (
          <div class="mt-6 flex flex-wrap gap-2">
            {post.data.heroes.map((hero) => (
              <span class="inline-flex items-center gap-1 rounded-lg bg-white/5 border border-white/10 px-3 py-1.5 text-sm text-gray-300">
                ‚öîÔ∏è {hero}
              </span>
            ))}
          </div>
        )}
        
        <!-- English Version Link -->
        {hasEnglishVersion && (
          <div class="mt-6 p-4 rounded-xl bg-marvel-blue/10 border border-marvel-blue/30">
            <a
              href={`/en/${enSlug}`}
              class="inline-flex items-center gap-2 text-marvel-gold hover:text-yellow-300 transition-colors"
            >
              <span class="text-xl">üá∫üá∏</span>
              <span class="font-medium">{t('post.readInEnglish')}</span>
              <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
              </svg>
            </a>
          </div>
        )}
      </header>
      
      <!-- Article Content -->
      <div class="prose prose-lg prose-invert max-w-none">
        <Content />
      </div>
      
      <!-- Back to Home -->
      <footer class="mt-16 pt-8 border-t border-white/10">
        <a
          href="/"
          class="inline-flex items-center gap-2 text-gray-400 hover:text-white transition-colors"
        >
          <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          <span>{t('nav.home')}„Å´Êàª„Çã</span>
        </a>
      </footer>
    </div>
  </article>
</BaseLayout>
