---
// 英語トップページ
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import PostCard from '../../components/PostCard.astro';
import { useTranslations } from '../../i18n/ui';

const t = useTranslations('en');

// 英語記事を取得（新しい順）
const posts = await getCollection('posts', ({ id }) => id.startsWith('en/'));
const sortedPosts = posts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<BaseLayout title={t('site.title')} lang="en">
  <!-- Hero Section with Background Image -->
  <section class="relative py-12 sm:py-16 overflow-hidden">
    <!-- Background Image -->
    <div class="absolute inset-0">
      <img 
        src="/images/hero-bg.jpg" 
        alt="" 
        class="w-full h-full object-cover object-center"
      />
      <!-- Gradient Overlay -->
      <div class="absolute inset-0 bg-gradient-to-r from-black/80 via-black/60 to-black/40"></div>
      <div class="absolute inset-0 bg-gradient-to-t from-[#0d0d0d] via-transparent to-transparent"></div>
    </div>
    
    <!-- Content -->
    <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <h1 class="text-3xl sm:text-4xl font-bold text-white">
        News
      </h1>
      <p class="mt-2 text-gray-300">
        {t('site.description')}
      </p>
    </div>
  </section>

  <!-- Posts Grid -->
  <section class="py-8 sm:py-12">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      {sortedPosts.length > 0 ? (
        <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-4">
          {sortedPosts.map((post) => (
            <PostCard post={post} lang="en" />
          ))}
        </div>
      ) : (
        <div class="text-center py-12">
          <p class="text-gray-500">No articles yet</p>
        </div>
      )}
    </div>
  </section>
</BaseLayout>
