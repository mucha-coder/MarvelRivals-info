---
import { type Lang, useTranslations } from '../i18n/ui';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<footer class="border-t border-white/10 bg-marvel-dark">
  <div class="mx-auto max-w-7xl px-4 py-12 sm:px-6 lg:px-8">
    <div class="grid gap-8 md:grid-cols-3">
      <!-- About -->
      <div>
        <div class="flex items-center gap-3 mb-4">
          <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-gradient-to-br from-marvel-red to-marvel-purple">
            <span class="text-xl font-bold text-white">M</span>
          </div>
          <span class="text-xl font-display font-bold text-white">
            Marvel Rivals <span class="text-marvel-gold">Info</span>
          </span>
        </div>
        <p class="text-sm text-gray-400 leading-relaxed">
          {t('site.description')}
        </p>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="mb-4 text-sm font-semibold uppercase tracking-wider text-gray-300">
          Quick Links
        </h3>
        <ul class="space-y-2">
          <li>
            <a href={lang === 'ja' ? '/' : '/en'} class="text-gray-400 hover:text-marvel-gold transition-colors">
              {t('nav.home')}
            </a>
          </li>
          <li>
            <a href={lang === 'ja' ? '/category/patch-notes' : '/en/category/patch-notes'} class="text-gray-400 hover:text-marvel-gold transition-colors">
              {t('nav.patchNotes')}
            </a>
          </li>
          <li>
            <a href={lang === 'ja' ? '/category/hero-balance' : '/en/category/hero-balance'} class="text-gray-400 hover:text-marvel-gold transition-colors">
              {t('nav.heroBalance')}
            </a>
          </li>
        </ul>
      </div>

      <!-- Legal -->
      <div>
        <h3 class="mb-4 text-sm font-semibold uppercase tracking-wider text-gray-300">
          Legal
        </h3>
        <p class="text-xs text-gray-500 leading-relaxed">
          {t('footer.disclaimer')}
        </p>
      </div>
    </div>

    <div class="mt-8 border-t border-white/5 pt-8">
      <p class="text-center text-sm text-gray-500">
        {t('footer.copyright')}
      </p>
    </div>
  </div>
</footer>
