---
import { type Lang, useTranslations } from '../i18n/ui';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<footer class="bg-[#0a0a0a] border-t border-white/5">
  <div class="mx-auto max-w-7xl px-4 py-8 sm:px-6 lg:px-8">
    <div class="flex flex-col md:flex-row items-center justify-between gap-4">
      <!-- Logo -->
      <div class="flex items-center gap-2">
        <div class="w-6 h-6 bg-gradient-to-br from-yellow-400 to-yellow-600 rounded flex items-center justify-center">
          <span class="text-black font-bold text-xs">MR</span>
        </div>
        <span class="text-sm font-bold text-white">RIVALS INFO</span>
      </div>
      
      <!-- Disclaimer -->
      <p class="text-xs text-gray-500 text-center">
        {t('footer.disclaimer')}
      </p>
      
      <!-- Copyright -->
      <p class="text-xs text-gray-500">
        {t('footer.copyright')}
      </p>
    </div>
  </div>
</footer>
