---
import { type Lang, useTranslations } from '../i18n/ui';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<footer class="bg-[#0a0a0a] border-t border-white/5">
  <div class="mx-auto max-w-7xl px-4 py-8 sm:px-6 lg:px-8">
    <div class="flex flex-col md:flex-row items-center justify-between gap-4">
      <!-- Logo -->
      <a href={lang === 'ja' ? '/' : '/en'} class="flex items-center group">
        <img 
          src="/images/logo.png" 
          alt="Marvel Rivals" 
          class="h-8 w-auto opacity-80 group-hover:opacity-100 transition-opacity"
        />
      </a>
      
      <!-- Disclaimer -->
      <p class="text-xs text-gray-500 text-center">
        {t('footer.disclaimer')}
      </p>
      
      <!-- Copyright -->
      <p class="text-xs text-gray-500">
        {t('footer.copyright')}
      </p>
    </div>
  </div>
</footer>
